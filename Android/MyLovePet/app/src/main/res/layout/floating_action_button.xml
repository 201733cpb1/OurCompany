<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/constraintLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end|bottom">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButtonParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:src="@drawable/floating_btn" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButtonAdd"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        app:layout_constraintRight_toLeftOf="@+id/floatingButtonParent"
        app:layout_constraintBottom_toBottomOf="@+id/floatingButtonParent"
        android:src="@drawable/floating_btn_pet_add"
        android:layout_marginEnd="60dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButtonDel"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/floatingButtonAdd"
        app:layout_constraintRight_toLeftOf="@+id/floatingButtonSet"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/floatingButtonAdd"
        app:layout_constraintTop_toTopOf="@+id/floatingButtonSet"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/floating_btn_pet_del"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButtonSet"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/floatingButtonParent"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/floatingButtonParent"
        android:src="@drawable/floating_btn_pet_set"/>

</android.support.constraint.ConstraintLayout>