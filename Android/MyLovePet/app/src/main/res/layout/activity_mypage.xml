<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 화면-->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#778899"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/MyToolbar" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="닉네임 : 아아아 님"
            android:textColor="@color/WhiteTextColor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/petCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="나의 펫 수 : 5"
            android:textColor="@color/WhiteTextColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="사는곳 : 대구"
            android:textColor="@color/WhiteTextColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/buttonMyBoard"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:background="#696969"
                android:gravity="center"
                android:text="게시글"
                android:textColor="@color/WhiteTextColor"
                android:textSize="22dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonMySitterBoard"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:background="#696969"
                android:gravity="center"
                android:text="펫 시터 글"
                android:textColor="@color/WhiteTextColor"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- 네비게이션 -->
    <android.support.design.widget.NavigationView
        android:id="@+id/naviView"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemBackground="@drawable/drawer_item"
        app:itemTextColor="@color/test">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#32394a"
            android:choiceMode="singleChoice"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:listSelector="#222631" />

    </android.support.design.widget.NavigationView>
    <!-- 네비게이션 끝-->

</android.support.v4.widget.DrawerLayout>