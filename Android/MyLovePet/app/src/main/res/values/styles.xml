<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 툴바 스타일 지정-->
    <style name="MyToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- This will change drawer icon -->
        <!-- background of the  -->
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!-- 툴바 스타일 지정 끝-->


    <!-- 슬라이드메뉴 -->

    <style name="slideMenuTheme.button" parent="@android:style/Widget.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/WhiteTextColor</item>
        <item name="android:background">#1A191F</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="slideMenuTheme.textView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">@color/WhiteTextColor</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <!-- 슬라이드 메뉴끝-->



    <style name="mainTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:text">null</item>
    </style>


    <!-- 회원가입 텍스트뷰 스타일 -->
    <style name="joinTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- 기본적인 버튼 스타일 -->
    <style name="shapeButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_base_style</item>
        <item name="android:text">다음</item>
        <item name="android:textColor">@drawable/button_base_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- 스피너 스타일 -->
    <style name="MySpiner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>


</resources>
